{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "rootDir": "./src",
      "paths": {
         "*": ["node_modules/*", "src/types/*"]
       },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}